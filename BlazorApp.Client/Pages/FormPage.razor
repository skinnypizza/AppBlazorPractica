@page "/formpage"
@inject NavigationManager NavigationManager
@inject RepresentanteService RepresentanteService
<button @onclick="navegar" class="btn btn-primary">Navegar a Representante Form Page</button>
@if (oListaRepresentante != null && oListaRepresentante.Count != 0)
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Num_Empl</th>
                <th>Nombre</th>
                <th>Edad</th>
                <th>Cargo</th>
                <th>FechaContrato</th>
                <th>Cuota</th>
                <th>Ventas</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in oListaRepresentante)
            {
                <tr>
                    <td>intParse((@item.Num_Empl)</td>
                    <td>@item.Nombre</td>
                    <td>@item.Edad</td>
                    <td>@item.Cargo</td>
                    <td>@item.FechaContrato?.ToShortDateString()</td>
                    <td>@item.Cuota</td>
                    <td>@item.Ventas</td>
                    <td>
                        <button class="btn-primary"
                                @onclick = "(()=>recuperarRepresentante(int.Parse(item.Num_Empl)))">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil" viewBox="0 0 16 16">
                                <path d="M12.146.146a.5.5 0 0 1 .708 0l3 3a.5.5 0 0 1 0 .708l-10 10a.5.5 0 0 1-.168.11l-5 2a.5.5 0 0 1-.65-.65l2-5a.5.5 0 0 1 .11-.168zM11.207 2.5 13.5 4.793 14.793 3.5 12.5 1.207zm1.586 3L10.5 3.207 4 9.707V10h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.293zm-9.761 5.175-.106.106-1.528 3.821 3.821-1.528.106-.106A.5.5 0 0 1 5 12.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.468-.325" />
                            </svg>
                        </button>
                        <button class="btn-danger"
                                @onclick = "(()=>eliminarRepresentante(int.Parse(item.Num_Empl)))">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash" viewBox="0 0 16 16">
                                <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0z" />
                                <path d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4zM2.5 3h11V2h-11z" />
                            </svg>
                        </button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
@code {
    public List<RepresentanteVentas> oListaRepresentante { get; set; } = new List<RepresentanteVentas>();
    public List<RepresentanteList> lista { get; set; } = new List<RepresentanteList>();
    protected override Task OnInitializedAsync()
    {
        oListaRepresentante.Add(new RepresentanteVentas {
            Num_Empl = "1",
            Nombre = "Juan Perez",
            Edad = 30,
            Cargo = "Vendedor",
            FechaContrato = DateTime.Now.AddYears(-2),
            Cuota = 50000,
            Ventas = 60000
        });
        oListaRepresentante.Add(new RepresentanteVentas {
            Num_Empl = "2",
            Nombre = "Maria Lopez",
            Edad = 28,
            Cargo = "Vendedora",
            FechaContrato = DateTime.Now.AddYears(-1),
            Cuota = 40000,
            Ventas = 45000
        });
        //lista = RepresentanteService.listarRepresentantes();
        return base.OnInitializedAsync();
    }
    private void navegar()
    {
        NavigationManager.NavigateTo("/formpage/registroRepresentante");
    }
    private void recuperarRepresentante(int Num_Empl)
    {
        NavigationManager.NavigateTo("/formpage/editarRepresentante/{Nro_Empl}");
    }
    private void eliminarRepresentante(int Num_Empl)
    {
        var listaQueda = oListaRepresentante.Where(p => p.Num_Empl != Num_Empl.ToString()).ToList();
        oListaRepresentante = listaQueda;
    }
}
